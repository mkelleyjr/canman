<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>CanMan</name>

    <description>
        A calculator for scrap cans/bottles. How much will you make recycling?  
    </description>

    <author href="http://abitofabyte.blogspot.com/" email="michael.kelley.jr@gmail.com">
        Michael L. Kelley Jr. 
    </author>


     <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />


     <icon src="img/can.png" />

        <platform name="android">
              <icon src="img/android/ldpi.png" density="ldpi" />
              <icon src="img/android/mdpi.png" density="mdpi" />
              <icon src="img/android/hdpi.png" density="hdpi" />
              <icon src="img/android/xhdpi.png" density="xhdpi" />
     </platform>


